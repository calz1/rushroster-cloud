# Docker Environment Configuration
# Copy this file to .env before running docker-compose

# =============================================================================
# CRITICAL SECURITY SETTINGS
# =============================================================================
# Generate a strong secret key using:
#   python -c 'import secrets; print(secrets.token_urlsafe(32))'
# NEVER use the default value in production!
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
APP_PORT=8000

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# IMPORTANT: Change POSTGRES_PASSWORD to a strong, secure password!
# Generate one using: python -c 'import secrets; print(secrets.token_urlsafe(32))'
POSTGRES_DB=rushroster
POSTGRES_USER=rushroster
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
POSTGRES_PORT=5432

# =============================================================================
# API SETTINGS
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Options: local, s3, gcs, azure
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=/app/data/photos

# If using S3:
# STORAGE_PROVIDER=s3
# STORAGE_BUCKET_NAME=rushroster-photos
# STORAGE_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# If using MinIO or S3-compatible service:
# STORAGE_ENDPOINT_URL=http://minio:9000
# STORAGE_ACCESS_KEY=minioadmin
# STORAGE_SECRET_KEY=minioadmin

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Adjust origins based on your frontend URL
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://yourdomain.com"]
