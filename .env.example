# Application Settings
APP_NAME=rushroster-cloud
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=

# Database Settings
DATABASE_URL=postgresql://rushroster:rushroster@localhost:5432/rushroster
DATABASE_ECHO=False

# JWT Authentication
# CRITICAL: Generate a strong random secret key before running in production!
# The application will refuse to start if you use a weak default secret.
#
# Generate a secure key with:
#   python -c 'import secrets; print(secrets.token_urlsafe(32))'
#
# Then replace the value below with your generated key.
JWT_SECRET_KEY=REPLACE_THIS_WITH_A_STRONG_SECRET_GENERATED_USING_ABOVE_COMMAND
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Hashing
PASSWORD_BCRYPT_ROUNDS=12

# Object Storage (S3/GCS/Azure)
STORAGE_PROVIDER=s3
STORAGE_BUCKET_NAME=rushroster-photos
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_ENDPOINT_URL=

# AWS Credentials (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Community Features
COMMUNITY_FEED_DEFAULT_LIMIT=50
COMMUNITY_FEED_MAX_LIMIT=200
